@model EventModel

<h2>Delete Event</h2>

<div>
    <h4>Are you sure you want to delete this event?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Event Name</dt>
        <dd class="col-sm-10">@Model.EventName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>

