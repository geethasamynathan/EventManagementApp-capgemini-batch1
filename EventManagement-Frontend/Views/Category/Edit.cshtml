@model EventManagement_Frontend.Models.CategoryModel

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label"></label>
        <input asp-for="CategoryName" class="form-control" value="@Model.CategoryName" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" asp-action="EditData" asp-route-id="@Model.CategoryId">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

