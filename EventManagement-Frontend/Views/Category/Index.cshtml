@model IEnumerable<EventManagement_Frontend.Models.CategoryModel>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<!-- Button to add a new category -->
<a asp-action="Create" class="btn btn-primary">Add New Category</a>

<!-- Display the list of categories -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <!-- Edit Button -->
                     <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Edit</a>

                   
                    <!-- Delete Button -->
                    <form asp-action="Delete" asp-route-id="@category.CategoryId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
