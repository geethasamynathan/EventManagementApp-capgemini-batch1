@{
}
@model List<EventManagement_Frontend.Models.ReviewModel>

@{
    ViewData["Title"] = "Reviews";
}

<h2>All Reviews</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Review ID</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Review Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.ReviewId</td>
                    <td>@review.Rating</td>
                    <td>@review.Comment</td>
                    <td>@review.ReviewDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reviews available.</p>
}
