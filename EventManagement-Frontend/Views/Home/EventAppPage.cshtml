
@{
    ViewBag.Title = "EventManagementHomeApp";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <style>
        body {
            padding-top: 56px;
            background-color: #343a40;
            color: white;
            text-align: center;
            background-image: url('@Url.Content("~/images/music.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .cover-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .lead {
            color: rgba(255, 255, 255, 0.75);
        }

        .btn-primary {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">EventManagementApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Admin" asp-action="Login">Admin Login</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-white" href="#">Features</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-white" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="cover-container">
        <main role="main" class="inner cover">
            <h1 class="cover-heading">Welcome to Event Management Application.</h1>
            <p class="lead">
                Hello, and welcome to your ultimate destination for all things events! Whether you're here
                \to discover the hottest concerts, the most thrilling sports matches, or the latest conferences and workshops,
                we've got you covered.
            </p>
            <p class="lead">
                <a href="@Url.Action("Registration", "Authenticate" )" class="btn btn-lg btn-primary">Register/Login</a>
            </p>
        </main>
    </div>

    @* <footer class="border-top footer text-muted bg-dark">
        <div class="container text-center">
            Team - 2; &copy; 2024 - EventManagement - <a asp-area="" asp-controller="Home" asp-action="HomePage">Home</a>
        </div>
    </footer> *@

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
