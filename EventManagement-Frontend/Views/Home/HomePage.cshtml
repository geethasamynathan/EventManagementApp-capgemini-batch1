@model EventManagement_Frontend.Models.LoginModel;
<head>
    <link href="~/css/carousel.css" rel="stylesheet" />
</head>
<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">EventManagementApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li>
                    @if (Model.Username != null)
                    {
                    <h2>Welcome, @Model.Username!</h2>
                    }
                </li>
                <li class="nav-item" >
                    <a class="nav-link" asp-controller="Booking" asp-action="Index" >Booking History</a>
                </li>
            </ul>
            <form class="form-inline mt-2 mt-md-0" asp-controller="Authenticate" asp-action="Registration" method="get">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
            </form>
        </div>
    </nav>
</header>

<main role="main">

    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/workshop.jpeg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Conference</h2>
                    <p>A hub for ideas, innovation, and connection.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/sports.jpeg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block mt-30">
                    <h2>Sports</h2>
                    <h5>Thrilling battles where champions rise and fall.</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/music.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Entertainment</h2>
                    <p>Unforgettable nights of music and electric vibes.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
        <div class="row">
            <div class="col-lg-4">
                <img class="rounded-circle mt-4" src="~/images/entertainment.jpeg" alt="Generic placeholder image" width="140" height="140">
                <h2>Entertainment</h2>
                <p>
                    The ultimate escape from the everyday, entertainment brings together stories, music, performances,
                    and experiences that transport you to different worlds. Whether through movies, theater, live concerts,
                    or interactive games, it delivers excitement, joy, and inspiration.
                </p>
                <p><a class="btn btn-outline-primary" href="@Url.Action("Index", "Event")" role="button">View details</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="rounded-circle" src="~/images/sports2.jpeg" alt="Generic placeholder image" width="140" height="140">
                <h2>Sports</h2>
                <p>
                    A high-energy arena where physical ability, strategy, and competition meet, sports offer a thrilling showcase
                    of human endurance and teamwork. Whether on the field, court, or track, athletes push their limits, creating
                    electrifying moments of skill and determination.
                </p>
                <p><a class="btn btn-outline-primary" href="@Url.Action("Index", "Event")" role="button">View details</a></p>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="rounded-circle" src="~/images/workshop.jpeg" alt="Generic placeholder image" width="140" height="140">
                <h2>Workshop</h2>
                <p>
                    A hands-on, interactive learning experience where participants actively engage in exploring a specific topic
                    or skill. Workshops provide a collaborative environment, encouraging group discussion, idea sharing, and
                    practical application.
                </p>
                <p><a class="btn btn-outline-primary" href="@Url.Action("Index", "Event")" role="button">View details</a></p>
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        <div class="container">
            <div class="row align-items-center">
                <!-- Left section: Image -->
                <div class="col-md-6">
                    <div class="event-image">
                        <img src="~/images/entertainment.jpeg" alt="Event" class="img-fluid" />
                    </div>
                </div>

                <!-- Right section: Text and Button -->
                <div class="col-md-6 text-center">
                    <div class="event-details">
                        <h2 style="color: red;">It's time to book your seat</h2>
                        <p>
                            The event regularly attracts a diverse range of attendees from around the world,
                            across different professions, and with different levels of experience transform your business.
                        </p>
                        <a href="@Url.Action("Index", "Event")" class="btn btn-danger btn-lg">Buy Tickets</a>
                    </div>
                </div>
            </div>
        </div>

        <hr class="featurette-divider">



        <!-- /END THE FEATURETTES -->

    </div><!-- /.container -->
    <!-- FOOTER -->
</main>


<main class="container py-5">


    <div class="row" data-masonry='{"percentPosition": true }'>
        <div class="col-sm-6 col-lg-4 mb-4">
            <div class="card">
                <img src="~/images/sports2.jpeg" class="card-img-top" alt="Your image description" width="100%" height="200">

                <div class="card-body">
