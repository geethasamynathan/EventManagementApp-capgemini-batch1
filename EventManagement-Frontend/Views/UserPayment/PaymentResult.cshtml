

@model PaymentResultViewModel 

<head>
    <link href="~/css/paymentresult.css" rel="stylesheet"   />
</head>

<div class="payment-success-container">
    <div class="payment-success-card">
        <div class="checkmark-icon">
            <span>&#10004;</span> <!-- Checkmark icon -->
        </div>
        <h2>Payment Successful</h2>
        <p>Thank you for your purchase!</p>

        <div class="payment-details">
            <ul>
                <li><strong>Amount Paid:</strong> @Model.TotalAmount.ToString("C")</li>
                <li><strong>Date & Time:</strong> @Model.PaymentDate.ToString("MMMM dd, yyyy, hh:mm tt")</li>
                <li><strong>Reference Number:</strong> @Model.PaymentId</li>
            </ul>
        </div>

        <a href="/" class="return-home-btn">Return to Homepage</a>
    </div>
</div>
 

