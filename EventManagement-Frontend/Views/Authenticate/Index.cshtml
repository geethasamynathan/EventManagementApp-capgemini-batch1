<script>
    document.addEventListener("DOMContentLoaded", function () {
        const text = "Welcome to Event Management System...";
        const elem = document.getElementById("animated-text");
        let index = 0;

        function typeWriter() {
            if (index < text.length) {
                elem.innerHTML += text.charAt(index);
                index++;
                setTimeout(typeWriter, 100); // Adjust the speed here
            } else {
                // Wait a bit before starting the animation again
                setTimeout(() => {
                    elem.innerHTML = ''; // Clear the text
                    index = 0; // Reset index
                    typeWriter(); // Start again
                }, 1500); // Wait for 2 seconds before restarting (adjust as needed)
            }
        }

        typeWriter();
    });


</script>